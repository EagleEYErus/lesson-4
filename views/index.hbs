<link rel='stylesheet' href='/stylesheets/style.css'>
<h1 id="title">{{title}}</h1>
<form method="post" action="/profile">
    <fieldset>
        <div class="form-group">
            <label>Никнейм игрока</label>
            <input class="form-control" type="text" name="nickname" placeholder="Введите свой никнейм" required>
        </div>
        <div class="form-group">
            <label>Платнформа</label>
            <select class="form-control" name="platform" required>
                <option value="psn">PSN</option>
                <option value="pc">PC</option>
            </select>
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit" name="search">Поиск</button>
        </div>
    </fieldset>
</form>
